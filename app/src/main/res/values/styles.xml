        <item name="colorPrimary">@color/main3</item>
        <item name="colorPrimaryVariant">@color/back</item>
        <item name="colorOnPrimary">@color/main3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main2</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorGreen">@color/back</item>
        <item name="colorMain">@color/main3</item>
